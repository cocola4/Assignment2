<h1>Books</h1>


<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan = 3></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></tb>
      <td><%= book.body %></tb>
      <td><%= link_to "Show", book_path(book.id), class: "show" %></tb>
      <td><%= link_to "Edit", edit_book_path(book.id), class: "edit" %></tb>
      <td><%= link_to "Destroy", book_path(book.id), class: "destroy", method: :delete, "data-confirm" => "Are you sure?" %></tb>
    </tr>
    <% end %>
  </tbody>
</table>


<h2>New Book</h2>


<% if @book.errors.any? %>
  <div class="error_explanation">
    <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>



<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <div class="field">
    <label>Title</label>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <label>Body</label>
    <%= f.text_area :body %>
  </div>
  
  <div class="action">
    <%= f.submit "Create Book" %>
  </div>
  
<% end %>
  